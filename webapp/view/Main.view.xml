<mvc:View
    controllerName="zqm.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:table="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <sfb:SmartFilterBar
            id="smartFilterBar"
            entitySet="ZC_QueryVendor"
            basicSearchFieldName="Lifnr"
            persistencyKey="UniqueAndStablePersistencyKey"
        >
            <sfb:controlConfiguration>
                <sfb:ControlConfiguration
                    id="_IDGenControlConfiguration1"
                    key="Lifnr"
                    label="Fournisseur"
                    visibleInAdvancedArea="true"
                    filterType="single"
                />
                <sfb:ControlConfiguration
                    id="_IDGenControlConfiguration2"
                    key="class"
                    label="Classe"
                    visibleInAdvancedArea="true"
                    filterType="single"
                />
            </sfb:controlConfiguration>
        </sfb:SmartFilterBar>
        <html:a id="hiddenLink" />
        <table:Table
            id="table"
            rows="{/}"
            selectionMode="MultiToggle"
            paste="onPaste"
            ariaLabelledBy="title"
        >
            <table:extension>
                <OverflowToolbar
                    id="_IDGenOverflowToolbar1"
                    style="Clear"
                >
                    <Title
                        id="title"
                        text="Fournisseurs"
                    />
                    <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    <Button
                        id="_IDGenButton2"
                        icon="sap-icon://refresh"
                        tooltip="Effacer tous les filtres"
                        press="onClearAllFilters"
                    />
                    <Button
                        id="_IDGenButton1"
                        type="Accept"
                        press="onExtractData"
                        icon="sap-icon://excel-attachment"
                    />
                </OverflowToolbar>
            </table:extension>
            <table:columns>
                <!-- Name1 -->
                <table:Column
                    id="columnName1"
                    width="11rem"
                    sortProperty="Name1"
                    filterProperty="Name1"
                >
                    <Label
                        id="labelName1"
                        text="{i18n>Name1}"
                    />
                    <table:template>
                        <Text
                            id="textName1"
                            text="{Name1}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>

                <!-- Lifnr -->
                <table:Column
                    id="columnLifnr"
                    width="11rem"
                    sortProperty="Lifnr"
                    filterProperty="Lifnr"
                >
                    <Label
                        id="labelLifnr"
                        text="{i18n>Lifnr}"
                    />
                    <table:template>
                        <Text
                            id="textLifnr"
                            text="{Lifnr}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>

                <!-- CATEGORIE_FOURNISSEUR -->
                <table:Column
                    id="columnCategorieFournisseur"
                    width="11rem"
                    sortProperty="CATEGORIE_FOURNISSEUR"
                    filterProperty="CATEGORIE_FOURNISSEUR"
                >
                    <Label
                        id="labelCategorieFournisseur"
                        text="{i18n>CATEGORIE_FOURNISSEUR}"
                    />
                    <table:template>
                        <Text
                            id="textCategorieFournisseur"
                            text="{CATEGORIE_FOURNISSEUR}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>

                <!-- QUALIFICATION -->
                <table:Column
                    id="columnQualification"
                    width="11rem"
                    sortProperty="QUALIFICATION"
                    filterProperty="QUALIFICATION"
                >
                    <Label
                        id="labelQualification"
                        text="{i18n>QUALIFICATION}"
                    />
                    <table:template>
                        <Text
                            id="textQualification"
                            text="{QUALIFICATION}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>

                <!-- ENTENTE_QUALITE -->
                <table:Column
                    id="columnEntenteQualite"
                    width="11rem"
                    sortProperty="ENTENTE_QUALITE"
                    filterProperty="ENTENTE_QUALITE"
                >
                    <Label
                        id="labelEntenteQualite"
                        text="{i18n>ENTENTE_QUALITE}"
                    />
                    <table:template>
                        <Text
                            id="textEntenteQualite"
                            text="{ENTENTE_QUALITE}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>

                <!-- CATEGORIE_FOURNISSEUR -->
                <table:Column
                    id="columnCategorieFournisseurold"
                    width="11rem"
                    sortProperty="CATEGORIE_FOURNISSEUR"
                    filterProperty="CATEGORIE_FOURNISSEUR"
                >
                    <Label
                        id="labelCategorieFournisseurold"
                        text="{i18n>CATEGORIE_FOURNISSEUR_OLD}"
                    />
                    <table:template>
                        <Text
                            id="textCategorieFournisseurold"
                            text="{CATEGORIE_FOURNISSEUR_OLD}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>

                <!-- QUALIFICATION -->
                <table:Column
                    id="columnQualificationold"
                    width="11rem"
                    sortProperty="QUALIFICATION"
                    filterProperty="QUALIFICATION"
                >
                    <Label
                        id="labelQualificationold"
                        text="{i18n>QUALIFICATION_OLD}"
                    />
                    <table:template>
                        <Text
                            id="textQualificationold"
                            text="{QUALIFICATION_OLD}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>

                <!-- ENTENTE_QUALITE -->
                <table:Column
                    id="columnEntenteQualiteold"
                    width="11rem"
                    sortProperty="ENTENTE_QUALITE"
                    filterProperty="ENTENTE_QUALITE"
                >
                    <Label
                        id="labelEntenteQualiteold"
                        text="{i18n>ENTENTE_QUALITE_OLD}"
                    />
                    <table:template>
                        <Text
                            id="textEntenteQualiteold"
                            text="{ENTENTE_QUALITE_OLD}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>

                <!-- Ernam -->
                <table:Column
                    id="columnErnam"
                    width="11rem"
                    sortProperty="Ernam"
                    filterProperty="Ernam"
                >
                    <Label
                        id="labelErnam"
                        text="{i18n>Ernam}"
                    />
                    <table:template>
                        <Text
                            id="textErnam"
                            text="{Ernam}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>

                <!-- Erdat -->
                <table:Column
                    id="columnErdat"
                    width="11rem"
                    sortProperty="Erdat"
                    filterProperty="Erdat"
                >
                    <Label
                        id="labelErdat"
                        text="{i18n>Erdat}"
                    />
                    <table:template>
                        <Text
                            id="textErdat"
                            text="{path: 'Erdat', formatter: '.formatDate'}"
                            wrapping="false"
                        />
                    </table:template>
                </table:Column>
            </table:columns>
        </table:Table>

        <BusyDialog id="BusyDialog" />
    </Page>
</mvc:View>
